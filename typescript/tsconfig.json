{
  "compilerOptions": {
    "target": "ES2020",                  // You can keep this target as ES2020
    "module": "ESNext",                  // Change module to ESNext or ES6
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",          // Ensure module resolution is set to node
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

